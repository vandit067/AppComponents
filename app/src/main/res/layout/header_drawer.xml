<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:padding="@dimen/activity_horizontal_margin"
    android:layout_height="170dp">

    <com.vandit.samples.appcomponents.customviews.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:id="@+id/header_drawer_civ_profile"
        android:src="@mipmap/ic_launcher"
        app:civ_border_width="2dp"
        app:civ_border_color="@android:color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_toRightOf="@id/header_drawer_civ_profile"
        android:layout_centerVertical="true">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Vandit Patel"
        android:id="@+id/header_drawer_tv_profile_name"
        android:textColor="@android:color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/header_drawer_civ_profile"
        android:layout_below="@id/header_drawer_tv_profile_name"
        android:layout_centerVertical="true"
        android:textSize="16sp"
        android:text="App Components"
        android:id="@+id/header_drawer_tv_app_details"
        android:textColor="@android:color/white"/>
    </LinearLayout>
    
</RelativeLayout>